{
	"name": "@sylphx/configs",
	"description": "Shared configurations for SylphxAI projects (tsconfig, biome)",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/configs.git"
	},
	"packageManager": "bun@1.3.3",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "echo 'No build needed for config packages'",
		"lint": "biome check .",
		"format": "biome format --write .",
		"prepublishOnly": "bunx @sylphx/doctor prepublish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@sylphx/bump": "^1.4.13",
		"@sylphx/doctor": "^1.27.0",
		"lefthook": "^2.0.4",
		"turbo": "^2.5.4"
	},
	"type": "module"
}
